package cce105;

import javax.swing.JOptionPane;

public class Main {
    public static void main(String[] args) {
        String mageName = JOptionPane.showInputDialog("Enter Mage's name:");
        String warriorName = JOptionPane.showInputDialog("Enter Warrior's name:");

        gamecharacter mage = new mage(mageName);
        gamecharacter warrior = new warrior(warriorName);

        JOptionPane.showMessageDialog(null, "Game starts! Both characters have 100 HP.");

        while (mage.isAlive() && warrior.isAlive()) {
          
            String[] mageOptions = {"Fireball", "Lightning Storm"};
            int mageChoice = JOptionPane.showOptionDialog(null,
                    mage.name + "'s turn. Choose your move:",
                    "Mage Turn",
                    JOptionPane.DEFAULT_OPTION,
                    JOptionPane.INFORMATION_MESSAGE,
                    null,
                    mageOptions,
                    mageOptions[0]);

            if (mageChoice == 0) {
                mage.attack(warrior);
            } else {
                mage.specialMove(warrior);
            }

            if (!warrior.isAlive()) break;

            
            String[] warriorOptions = {"Sword Slash", "Shield Bash"};
            int warriorChoice = JOptionPane.showOptionDialog(null,
                    warrior.name + "'s turn. Choose your move:",
                    "Warrior Turn",
                    JOptionPane.DEFAULT_OPTION,
                    JOptionPane.INFORMATION_MESSAGE,
                    null,
                    warriorOptions,
                    warriorOptions[0]);

            if (warriorChoice == 0) {
                warrior.attack(mage);
            } else {
                warrior.specialMove(mage);
            }

           
            JOptionPane.showMessageDialog(null, "HP Status:\n" + mage.getStatus() + "\n" + warrior.getStatus());
        }

      
        String winner = mage.isAlive() ? mage.name : warrior.name;
        JOptionPane.showMessageDialog(null, "ðŸŽ‰ " + winner + " wins the battle!");
    }
}
